{
  "name": "directives",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/directives/src",
  "prefix": "ngtw",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/directives/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/directives/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/directives/tsconfig.lib.json",
          "watch": true
        }
      },
      "defaultConfiguration": "development"
    },
    "tailwind": { 
      "command": "npx @tailwindcss/cli -i {projectRoot}/styles/input.css -o {projectRoot}/styles/directives.css",
      "configurations": {
        "production": {
          "args": ["--minify"]
        },
        "development": {
          "args": ["--watch"]
        }
      },
      "defaultConfiguration": "development"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
