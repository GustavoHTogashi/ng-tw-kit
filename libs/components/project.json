{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "components",
  "prefix": "ngtw",
  "projectType": "library",
  "release": {
    "sourceRoot": "libs/components/src",
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "manifestRootsToUpdate": ["dist/{projectRoot}"]
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "configurations": {
        "development": {
          "tsConfig": "libs/components/tsconfig.lib.json"
        },
        "production": {
          "tsConfig": "libs/components/tsconfig.lib.prod.json"
        }
      },
      "defaultConfiguration": "development",
      "executor": "@nx/angular:package",
      "metadata": {
        "description": "Builds the components library for production or development."
      },
      "options": {
        "project": "libs/components/ng-package.json"
      },
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"]
    },
    "build-library": {
      "configurations": {
        "development": {
          "args": ["--configuration=development", "--watch=true"],
          "parallel": true
        },
        "production": {
          "args": ["--configuration=production"],
          "parallel": false
        }
      },
      "defaultConfiguration": "production",
      "executor": "nx:run-commands",
      "metadata": {
        "description": "Builds the components library for production."
      },
      "options": {
        "commands": ["nx run components:tailwind", "nx run components:build"]
      }
    },
    "tailwind": {
      "command": "npx @tailwindcss/cli -i {projectRoot}/_styles/input.css -o {projectRoot}/_styles/components.css",
      "configurations": {
        "production": {
          "args": ["--minify"]
        },
        "development": {
          "args": ["--watch"]
        }
      },
      "defaultConfiguration": "development",
      "metadata": {
        "description": "Generates Tailwind CSS styles for the components library."
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
