{
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 200,
        "proseWrap": "never"
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"],
  "printWidth": 80,
  "proseWrap": "preserve",
  "quoteProps": "consistent",
  "singleQuote": true,
  "tailwindAttributes": [
    "class",
    "class:",
    "[class]",
    "ngClass",
    "[ngClass]",
    "ngStyle",
    "[ngStyle]",
    "routerLinkActive",
    "[routerLinkActive]"
  ],
  "tailwindFunctions": ["signal", "computed"]
}
